{
  "name": "@adobe/spacecat-content-scraper",
  "version": "1.6.3",
  "description": "SpaceCat Content Scraper",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon",
    "test": "c8 mocha -i -g 'Post-Deploy' --spec=test/**/*.test.js",
    "test-postdeploy": "mocha -g 'Post-Deploy' --spec=test/**/*.test.js",
    "lint": "eslint .",
    "logs": "aws logs tail /aws/lambda/spacecat-services--content-scraper",
    "semantic-release": "semantic-release",
    "semantic-release-dry": "semantic-release --dry-run --no-ci --branches $CIRCLE_BRANCH",
    "build": "hedy -v --test-bundle",
    "build:layer": "cd layers/puppeteer/nodejs && npm install && cd .. && zip -r ../../dist/spacecat-layer-puppeteer.zip nodejs",
    "deploy": "hedy -v --deploy --test",
    "deploy-routes": "hedy --no-build -no-hints -l major",
    "deploy-ci": "hedy -v --deploy --test --pkgVersion=ci$CIRCLE_BUILD_NUM -l ci --cleanup-ci=24h",
    "deploy-secrets": "hedy --aws-update-secrets --params-file=secrets/secrets.env",
    "prepare": "husky install",
    "postinstall": "node static/npm/post-install-get-helix-importer-lib.js"
  },
  "wsk": {
    "target": "aws",
    "name": "spacecat-services/content-scraper@${version}",
    "externals": [
      "@spa@sparticuz/chromium",
      "puppeteer-core",
      "puppeteer-extra",
      "puppeteer-extra-plugin-stealth",
      "puppeteer-extra-plugin-adblocker",
      "sharp"
    ],
    "layers": [
      "arn:aws:lambda:us-east-1:282898975672:layer:spacecat-chrome-aws-lambda:1",
      "arn:aws:lambda:us-east-1:282898975672:layer:spacecat-puppeteer:2"
    ],
    "memory": 4096,
    "awsRole!important": "arn:aws:iam::282898975672:role/spacecat-role-services",
    "testUrl": "/_status_check/healthcheck.json",
    "awsAttachAuthorizer": "",
    "dev": {
      "params-file": "secrets/dev-secrets.json"
    },
    "fastlyServiceId!important": "",
    "timeout": 900000,
    "nodeVersion": 20,
    "static": [
      "static/evaluate/default.js",
      "static/evaluate/import.js",
      "static/inject/import.js",
      "static/resources/import/styles.xml"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spacecat-content-scraper"
  },
  "bugs": {
    "url": "https://github.com/adobe/spacecat-content-scraper"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@adobe/eslint-config-helix": "2.0.6",
    "@adobe/helix-deploy": "12.0.0",
    "@adobe/helix-universal": "5.0.5",
    "@adobe/semantic-release-coralogix": "1.1.31",
    "@adobe/semantic-release-skms-cmr": "1.1.2",
    "@redocly/cli": "1.16.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "12.0.1",
    "@sparticuz/chromium": "121.0.0",
    "c8": "10.1.2",
    "chai": "4.4.1",
    "chai-as-promised": "8.0.0",
    "dotenv": "16.4.5",
    "eslint": "8.57.0",
    "husky": "9.0.11",
    "mocha": "10.4.0",
    "nock": "13.5.4",
    "nodemon": "3.1.4",
    "puppeteer-core": "22.12.0",
    "puppeteer-extra": "3.3.6",
    "puppeteer-extra-plugin-adblocker": "2.13.6",
    "puppeteer-extra-plugin-stealth": "2.11.2",
    "sharp": "0.33.4",
    "sinon": "18.0.0"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.cjs": "eslint"
  },
  "dependencies": {
    "@adobe/helix-md2docx": "2.1.63",
    "@adobe/helix-shared-secrets": "2.2.8",
    "@adobe/helix-shared-wrap": "2.0.2",
    "@adobe/helix-status": "10.1.2",
    "@adobe/helix-universal-logger": "3.0.18",
    "@adobe/spacecat-shared-http-utils": "1.3.4",
    "@adobe/spacecat-shared-slack-client": "1.3.8",
    "@adobe/spacecat-shared-utils": "1.16.1",
    "@aws-sdk/client-s3": "3.600.0",
    "typescript": "5.5.2",
    "uuid": "^10.0.0"
  }
}
