{
  "name": "@adobe/spacecat-content-scraper",
  "version": "1.21.1",
  "description": "SpaceCat Content Scraper",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0 <23.0.0",
    "npm": ">=10.9.0 <12.0.0"
  },
  "scripts": {
    "start": "nodemon local.js --ignore ./tmp",
    "test": "c8 --skip-full mocha -i -g 'Post-Deploy' --spec=test/**/*.test.js",
    "test-postdeploy": "mocha -g 'Post-Deploy' --spec=test/**/*.test.js",
    "lint": "eslint .",
    "logs": "aws logs tail /aws/lambda/spacecat-services--content-scraper",
    "semantic-release": "semantic-release",
    "semantic-release-dry": "semantic-release --dry-run --no-ci --branches $CI_BRANCH",
    "build": "hedy -v --test-bundle",
    "build:layer": "mkdir -p dist && cd layers/puppeteer/nodejs && npm install && cd .. && zip -r ../../dist/spacecat-layer-puppeteer.zip .",
    "deploy": "hedy -v --deploy --test",
    "deploy-routes": "hedy --no-build -no-hints -l major",
    "deploy-ci": "hedy -v --deploy --test --pkgVersion=ci$CI_BUILD_NUM -l ci --cleanup-ci=24h",
    "deploy-secrets": "hedy --aws-update-secrets --params-file=secrets/secrets.env",
    "prepare": "husky",
    "postinstall": "node static/npm/post-install-get-helix-importer-lib.js"
  },
  "wsk": {
    "target": "aws",
    "name": "spacecat-services/content-scraper@${version}",
    "externals": [
      "@spa@sparticuz/chromium",
      "puppeteer-core",
      "puppeteer-extra",
      "puppeteer-extra-plugin-stealth",
      "puppeteer-extra-plugin-adblocker",
      "sharp"
    ],
    "awsLayers": [
      "arn:aws:lambda:us-east-1:282898975672:layer:spacecat-chrome-aws-lambda:2",
      "arn:aws:lambda:us-east-1:282898975672:layer:spacecat-puppeteer:4",
      "arn:aws:lambda:us-east-1:282898975672:layer:spacecat-sharp-layer:2"
    ],
    "memory": 4096,
    "awsRole!important": "arn:aws:iam::282898975672:role/spacecat-role-services",
    "testUrl": "/_status_check/healthcheck.json",
    "awsAttachAuthorizer": "spacecat-token-authorizer",
    "dev": {
      "params-file": "secrets/dev-secrets.json"
    },
    "fastlyServiceId!important": "",
    "timeout": 900000,
    "nodeVersion": 22,
    "static": [
      "static/evaluate/default.js",
      "static/evaluate/import.js",
      "static/evaluate/form.js",
      "static/evaluate/page-elements.js",
      "static/inject/import.js",
      "static/resources/import/styles.xml"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spacecat-content-scraper"
  },
  "bugs": {
    "url": "https://github.com/adobe/spacecat-content-scraper"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@adobe/eslint-config-helix": "2.0.9",
    "@adobe/fetch": "4.1.11",
    "@adobe/helix-deploy": "12.4.17",
    "@adobe/helix-universal": "5.0.8",
    "@adobe/semantic-release-coralogix": "1.1.34",
    "@adobe/semantic-release-skms-cmr": "1.1.5",
    "@redocly/cli": "1.29.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "12.0.1",
    "@smithy/types": "4.1.0",
    "@sparticuz/chromium": "131.0.1",
    "c8": "10.1.3",
    "chai": "5.1.2",
    "chai-as-promised": "8.0.1",
    "dotenv": "16.4.7",
    "eslint": "8.57.1",
    "esmock": "2.7.0",
    "husky": "9.1.7",
    "mocha": "11.1.0",
    "mocha-multi-reporters": "1.5.1",
    "mocha-suppress-logs": "0.5.1",
    "nock": "13.5.6",
    "nodemon": "3.1.9",
    "puppeteer-core": "23.11.1",
    "puppeteer-extra": "3.3.6",
    "puppeteer-extra-plugin-adblocker": "2.13.6",
    "puppeteer-extra-plugin-stealth": "2.11.2",
    "sharp": "0.33.5",
    "sinon": "19.0.2",
    "sinon-chai": "4.0.0"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.cjs": "eslint"
  },
  "mocha": {
    "require": "test/setup-env.js",
    "recursive": "true",
    "reporter": "mocha-multi-reporters",
    "reporter-options": "configFile=.mocha-multi.json"
  },
  "dependencies": {
    "@adobe/helix-md2docx": "2.1.107",
    "@adobe/helix-md2jcr": "1.0.13",
    "@adobe/helix-shared-body-data": "2.1.9",
    "@adobe/helix-shared-secrets": "2.2.10",
    "@adobe/helix-shared-wrap": "2.0.2",
    "@adobe/helix-status": "10.1.5",
    "@adobe/helix-universal-logger": "3.0.23",
    "@adobe/spacecat-shared-http-utils": "1.9.8",
    "@adobe/spacecat-shared-slack-client": "1.5.6",
    "@adobe/spacecat-shared-utils": "1.32.0",
    "@aws-sdk/client-s3": "3.749.0",
    "aws-xray-sdk": "3.10.3",
    "typescript": "5.7.3",
    "uuid": "11.0.5"
  }
}
